
.grid-warp {
	width: 90%;
	margin-left: 5%;
}
.grid {
	padding: 0 30rpx 30rpx;
}
.grid-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 28rpx;
	padding: 15rpx;
	padding-left: 25rpx;
	margin-top: 20rpx;
	position: relative;
	background-color: #fdfdfd;
	border-radius: 10rpx 10rpx 0 0;
}
.grid-title:after {
	content: '';
	position: absolute;
	left: 0;
	margin: auto;
	top: 0;
	bottom: 0;
	width: 10rpx;
	height: 40rpx;
	border-top-right-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
	background-color: #4aecdb;
}
.grid .grid-title {
	margin: 40rpx 0;
}
.grid-body {
	border-top: 1px #f5f5f5 solid;
	background: #fff;
	border-radius: 0 0 5px 5px;
}
.grid-info {
	padding: 30rpx;
	color: #3b4144;
	background: #fff;
}
.image {
	width: 50rpx;
	height: 50rpx;
}
.text {
	font-size: 26rpx;
	margin-top: 10rpx;
	color: #000000 !important;
}
.cu-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	/* padding-bottom: 20px; */
}
/* 修改全局菜单样式 去除内边距 */
.cu-list.grid.no-border{
	padding-bottom: 0 !important;
}
.no-border {
	padding: 0;
}
.grid-flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.padding-10 {
	padding: 10rpx 20rpx;
}
.cu-list.grid.no-border>.cu-item{
	padding-bottom: 5px !important;
	padding-top: 3px !important;
}

