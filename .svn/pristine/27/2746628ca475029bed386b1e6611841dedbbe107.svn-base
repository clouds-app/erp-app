<template>
	<view>
		<cu-custom bgColor="bg-gradual-blue" :isBack="true">
				<block slot="content">预下单查询</block>
		</cu-custom>
		
		<form class="xunhoutop">
			<view class="flex border-top">
				<view class="flex-sub">
						<selectDropdown
							:otherHeight='CustomBarHeight' 
							ref="lineDrawer"
							url="order/customerPaperArt"
